
<view class="container-login">
  <view class="container-login-bg">
    <view class='login-logo'>
      <image src='../../images/logo.png'></image>
    </view>
    <!-- 标题 -->
    <view class="tab-title" >
      <view class='titleSel {{currentIndex ? "" : "on"}}' bindtap='titleClick' data-idx='0'>
        <text>智慧园区</text>
      </view>
      <view class='titleSel {{currentIndex ? "on" : ""}}' bindtap='titleClick' data-idx='0'>
        <text>地产ERP</text>
      </view>
    </view>
  <!-- 内容 -->
    <swiper class='swiper' bindchange='pagechange' current='{{currentIndex}}'>
      
      <swiper-item class='swiperitem'>
        <form bindsubmit="formSubmityq" bindreset="formReset">
          <view class='label-item'>
            <view class='label-name'><image src='../../images/login1.png'></image></view>
             <input placeholder="输入姓名" />
          </view>
          <view class='label-item'>
            <view class='label-name'><image src='../../images/login2.png'></image></view>
             <input placeholder="输入手机号码" />
          </view>
          <view class='label-item'>
            <view class='label-name'><image src='../../images/login3.png'></image></view>
             <input placeholder="输入公司名称" />
          </view>
          <view class='label-item'>
            <view class='label-name'><image src='../../images/login4.png'></image></view>
             <input placeholder="城市定位" />
          </view>
          <view class="label-button">
            <button class="m-button-sumbit">提交</button>
          </view>     
        </form>    
      </swiper-item>
      
      <swiper-item class='swiperitem'>
        <form bindsubmit="formSubmiterp" bindreset="formReset">
          <view class='label-item'>
            <view class='label-name'><image src='../../images/login1.png'></image></view>
             <input placeholder="输入姓名" />
          </view>
          <view class='label-item'>
            <view class='label-name'><image src='../../images/login2.png'></image></view>
             <input placeholder="输入手机号码" />
          </view>
          <view class='label-item'>
            <view class='label-name'><image src='../../images/login3.png'></image></view>
             <input placeholder="输入公司名称" />
          </view>
          <view class='label-item'>
            <view class='label-name'><image src='../../images/login4.png'></image></view>
             <input placeholder="城市定位" />
          </view>
          <view class="label-button">
            <button class="m-button-sumbit">提交</button>
          </view>
        </form>
      </swiper-item>
      
    </swiper>
  </view>
  <view class='container-bottom-bg'>
    <image src='../../images/login-bg@2x.png'></image>
  </view>
</view>
