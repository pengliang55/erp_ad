/**index.wxss**/
.container{
	width:100%;
	margin: 0 auto;
	height:100%;
	background:#F5F6F9;
}
.sBanner{
	width:100%;
	height:288rpx;
}
.sBanner image{
	width:100%;
	height:100%;
}
.honerImg{
	margin:60rpx 16rpx 0 16rpx;
	width: calc(100% - 32rpx);
	height:288rpx;
}
.honerImg image{
	width: 100%;
	height:100%;
}
.list{
	width: calc(50% - 10rpx);
	height:191rpx;
	float: left;
	margin-top: 10px;
}
.list:nth-child(even){
	margin-left: 20rpx;
}
.list .friendImg{
	width: 100%;
	height:191rpx;
}
.listContent{
	width: calc(100% - 40rpx);
	display: block;
	padding-bottom: 20rpx;
}